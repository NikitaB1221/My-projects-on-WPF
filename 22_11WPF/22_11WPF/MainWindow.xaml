<Window x:Class="_22_11WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_22_11WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid Height="800" Margin="0,0,0,-16">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFE0D293"/>
                <GradientStop Color="#FF212020" Offset="0.703"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Button x:Name="b1" Content="Click Me!" HorizontalAlignment="Center" VerticalAlignment="Center" Height="196" Width="196" Click="Button_Click" FontFamily="Yu Gothic UI Semibold" FontSize="36">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FFFFD100"/>
                    <GradientStop Color="#3FE0D293" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
