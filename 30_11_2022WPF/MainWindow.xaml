    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="31*" />
            <RowDefinition Height="90*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="61*" />
            <RowDefinition Height="61*"/>
            <RowDefinition Height="61*" />
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>

        <Button x:Name="SymDot"
            Grid.Column="0" Grid.Row="6" Margin="3"
            Content="." 
            />

        <Button x:Name="Num0"
            Grid.Column="1" Grid.Row="6" Margin="3"
            Content="0" 
            Click="Num_Click"
            />

        <Button x:Name="SymEquals"
            Grid.Column="2" Grid.Row="6" Margin="3" Grid.ColumnSpan="2"
            Content="=" Click="SymEquals_Click"
            />

        <Button x:Name="Num1"
            Grid.Column="0" Grid.Row="5" Margin="3"
            Content="1"
            Click="Num_Click"
            />

        <Button x:Name="Num2"
            Grid.Column="1" Grid.Row="5" Margin="3"
            Content="2"
            Click="Num_Click"
            />

        <Button x:Name="Num3"
            Grid.Column="2" Grid.Row="5" Margin="3"
            Content="3"
            Click="Num_Click"
            />

        <Button x:Name="SymPlus"
            Grid.Column="3" Grid.Row="5" Margin="3"
            Content="+"
            Click="SymOperator_Click"
            />

        <Button x:Name="Num4"
            Grid.Column="0" Grid.Row="4" Margin="3"
            Content="4"
            Click="Num_Click"
            />

        <Button x:Name="Num5"
            Grid.Column="1" Grid.Row="4" Margin="3"
            Content="5"
            Click="Num_Click"
            />
        <Button x:Name="Num6"
            Grid.Column="2" Grid.Row="4" Margin="3"
            Content="6"
            Click="Num_Click"
            />

        <Button x:Name="SymMinus"
            Grid.Column="3" Grid.Row="4" Margin="3"
            Content="-"
            Click="SymOperator_Click"
            />

        <Button x:Name="Num7"
            Grid.Column="0" Grid.Row="3" Margin="3"
            Content="7"
            Click="Num_Click"
            />

        <Button x:Name="Num8"
            Grid.Column="1" Grid.Row="3" Margin="3"
            Content="8"
            Click="Num_Click"
            />

        <Button x:Name="Num9"
            Grid.Column="2" Grid.Row="3" Margin="3"
            Content="9"
            Click="Num_Click"
            />

        <Button x:Name="SymMult"
            Grid.Column="3" Grid.Row="3" Margin="3"
            Content="*"
            Click="SymOperator_Click"
            />

        <Button x:Name="SymCE"
            Grid.Column="0" Grid.Row="2" Margin="3"
            Content="CE" 
            Click="SymCE_Click"
            />

        <Button x:Name="SymC"
            Grid.Column="1" Grid.Row="2" Margin="3"
            Content="C"
            Click="SymC_Click"
            />

        <Button x:Name="SymLeft"
            Grid.Column="2" Grid.Row="2" Margin="3"
            Content="&lt;"
            Click="SymLeft_Click"
            />

        <Button x:Name="SymDiv"
            Grid.Column="3" Grid.Row="2" Margin="3"
            Content="/"
            Click="SymOperator_Click"
            />

        <TextBox x:Name="tbnow"
            Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Margin="3,3,3,3"  
            TextWrapping="Wrap" Text="0" TextAlignment="Right"/>

        <TextBox x:Name="tbpast"
            Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Margin="3,3,3,3"  
            TextWrapping="Wrap" Text="0" TextAlignment="Right"/>
    </Grid>

